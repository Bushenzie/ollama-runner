{
  "name": "ollama-runner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:ui dev:electron",
    "dev:ui": "vite",
    "dev:electron": "pnpm transpile:electron; NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "pnpm transpile:electron && pnpm build && electron-builder --mac --arm64",
    "dist:linux": "pnpm transpile:electron && pnpm build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.2",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "ollama": "^0.5.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^4.0.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "daisyui": "5.0.0-beta.6",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}